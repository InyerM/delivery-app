{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/delivery-app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/delivery-app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/delivery-app",
  "projects": {
    "delivery-app": {
      "type": "application",
      "root": "apps/delivery-app",
      "entryFile": "main",
      "sourceRoot": "apps/delivery-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/delivery-app/tsconfig.app.json"
      }
    },
    "restaurant": {
      "type": "application",
      "root": "apps/restaurant",
      "entryFile": "main",
      "sourceRoot": "apps/restaurant/src",
      "compilerOptions": {
        "tsConfigPath": "apps/restaurant/tsconfig.app.json"
      }
    },
    "driver": {
      "type": "application",
      "root": "apps/driver",
      "entryFile": "main",
      "sourceRoot": "apps/driver/src",
      "compilerOptions": {
        "tsConfigPath": "apps/driver/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "entities": {
      "type": "library",
      "root": "libs/entities",
      "entryFile": "index",
      "sourceRoot": "libs/entities/src",
      "compilerOptions": {
        "tsConfigPath": "libs/entities/tsconfig.lib.json"
      }
    }
  }
}